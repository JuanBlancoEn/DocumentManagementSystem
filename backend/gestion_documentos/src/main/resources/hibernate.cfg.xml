<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- ConfiguraciÃ³n de la base de datos -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/miapp</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin</property>

        <!-- Dialecto de MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Configuracion de Hibernate -->
        <property name="hibernate.show_sql">true</property>  <!-- Muestra SQL en consola -->
        <property name="hibernate.format_sql">true</property>  <!-- Formatea SQL -->
        <property name="hibernate.hbm2ddl.auto">update</property>  <!-- Crea o actualiza tablas -->

        <!-- Clases anotadas -->
        <mapping class="com.EngeniosBlanco.gestion_documentos.model.User"/>
        <mapping class="com.EngeniosBlanco.gestion_documentos.model.Metadata_documents"/>
        <mapping class="com.EngeniosBlanco.gestion_documentos.model.Fragment"/>
    </session-factory>
</hibernate-configuration>